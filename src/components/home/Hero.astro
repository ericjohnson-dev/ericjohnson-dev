  h1 {
    display: inline;
    font-style: normal;
    font-weight: 600;
    background: linear-gradient(
      75deg,
      rgb(31, 67, 116) 0%,
      rgb(104, 164, 201) 50%,
      rgb(35, 138, 255) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    background-size: 150% 150%;
    animation: gradient 5s ease infinite;
    line-height: 1.2;
  }

  @keyframes gradient {
    0% {
